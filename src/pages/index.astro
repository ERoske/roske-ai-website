---
import BaseLayout from '../layouts/BaseLayout.astro';
import Section from '../components/Section.astro';
import Card from '../components/Card.astro';
import { currentTheme } from '../themes/theme-config';

const theme = currentTheme;
---

<BaseLayout>

  <!-- ============================================
       HERO SECTION
       ============================================ -->
  <section class="relative min-h-[90vh] flex items-center overflow-hidden">
    <!-- Animated background -->
    <div class="absolute inset-0 dark:block hidden">
      <div class="absolute inset-0 bg-gradient-to-br from-[var(--color-bg)] via-[#1a0a2e] to-[#0a1a2e] animate-gradient" style="background-size: 400% 400%; animation: gradientShift 15s ease infinite;"></div>
      <div class="absolute inset-0" style="background-image: linear-gradient(rgba(233,69,96,0.04) 1px, transparent 1px), linear-gradient(90deg, rgba(233,69,96,0.04) 1px, transparent 1px); background-size: 60px 60px;"></div>
    </div>
    <div class="absolute inset-0 dark:hidden block bg-gradient-to-br from-[var(--color-bg-light)] to-gray-100"></div>

    <!-- Orbiting particles (dark mode only) -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none dark:block hidden">
      <div class="absolute top-1/2 left-1/2">
        <div class="w-1.5 h-1.5 rounded-full bg-[var(--color-accent)] opacity-40 absolute" style="animation: orbitSlow 25s linear infinite;"></div>
        <div class="w-1.5 h-1.5 rounded-full bg-[#4ecdc4] opacity-30 absolute" style="animation: orbitMedium 18s linear infinite;"></div>
        <div class="w-1.5 h-1.5 rounded-full bg-[#ffe66d] opacity-20 absolute" style="animation: orbitFast 12s linear infinite;"></div>
      </div>
    </div>

    <div class="relative z-10 max-w-7xl mx-auto px-6 py-20 md:py-32">
      <div class="flex flex-col lg:flex-row items-center gap-12 lg:gap-16">

      <!-- Headshot (mobile: shown above text, desktop: hidden here since hero image is on the right) -->
      <div class="lg:hidden flex justify-center mb-4"
        style="animation: fadeInUp 0.6s ease-out forwards;"
      >
        <img
          src="/images/Edward_Roske_Headshot.png"
          alt="Edward Roske"
          width="160"
          height="160"
          loading="eager"
          class="rounded-full w-32 h-32 sm:w-40 sm:h-40 object-cover shadow-lg ring-4 ring-[var(--color-accent)]/20"
        />
      </div>

      <div class="max-w-4xl lg:max-w-2xl">

        <!-- Status badge -->
        <div class="inline-flex items-center gap-3 rounded-full px-5 py-2 mb-8
          dark:bg-white/[0.03] dark:border dark:border-white/[0.08]
          bg-white border border-black/[0.06] shadow-sm"
          style="animation: fadeInUp 0.6s ease-out forwards;"
        >
          <div class="w-2 h-2 rounded-full bg-[var(--color-accent)] animate-pulse"></div>
          <span class="text-xs font-[var(--font-mono)] tracking-widest uppercase dark:text-[var(--color-text-muted)] text-[var(--color-text-dark-muted)]">
            Week of {theme.week}  &middot;  {theme.name}
          </span>
        </div>

        <!-- Main title -->
        <h1 class="text-5xl sm:text-6xl md:text-7xl lg:text-8xl font-black tracking-tighter leading-[0.9] mb-6"
          style="animation: fadeInUp 0.6s ease-out 0.15s forwards; opacity: 0;"
        >
          <span class="dark:text-white text-[var(--color-primary)]">Edward</span>
          <br/>
          <span class="dark:text-white text-[var(--color-primary)]">Roske</span>
          <span class="text-[var(--color-accent)]">.</span>
        </h1>

        <!-- Subtitle -->
        <p class="text-xl md:text-2xl font-light leading-relaxed max-w-2xl mb-4
          dark:text-[var(--color-text-muted)] text-[var(--color-text-dark-muted)]"
          style="animation: fadeInUp 0.6s ease-out 0.3s forwards; opacity: 0;"
        >
          {theme.hero.subtitle}
        </p>

        <!-- Tagline -->
        <p class="text-sm font-[var(--font-mono)] tracking-wide mb-10
          dark:text-[var(--color-text-muted)]/60 text-[var(--color-text-dark-muted)]/60"
          style="animation: fadeInUp 0.6s ease-out 0.4s forwards; opacity: 0;"
        >
          {theme.tagline}
        </p>

        <!-- CTA buttons -->
        <div class="flex flex-wrap gap-4"
          style="animation: fadeInUp 0.6s ease-out 0.5s forwards; opacity: 0;"
        >
          <a href="#current-work" class="inline-flex items-center gap-2 px-6 py-3 rounded-lg bg-[var(--color-accent)] text-white font-medium hover:bg-[var(--color-accent-hover)] transition-all duration-200 hover:-translate-y-0.5 hover:shadow-lg hover:shadow-[var(--color-accent)]/20">
            {theme.hero.ctaText}
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M19 14l-7 7m0 0l-7-7m7 7V3"/></svg>
          </a>
          <a href="/contact/" class="inline-flex items-center gap-2 px-6 py-3 rounded-lg font-medium transition-all duration-200 hover:-translate-y-0.5
            dark:bg-white/5 dark:text-white dark:hover:bg-white/10 dark:border dark:border-white/10
            bg-black/5 text-[var(--color-primary)] hover:bg-black/10 border border-black/10">
            Get in Touch
          </a>
        </div>

      </div>

      <!-- Hero image + headshot (desktop) -->
      <div class="hidden lg:flex flex-col items-center gap-6 flex-shrink-0"
        style="animation: fadeInUp 0.6s ease-out 0.6s forwards; opacity: 0;"
      >
        <img
          src="/images/Edward_Roske_Headshot.png"
          alt="Edward Roske"
          width="180"
          height="180"
          loading="eager"
          class="rounded-full w-40 h-40 xl:w-44 xl:h-44 object-cover shadow-lg ring-4 ring-[var(--color-accent)]/20"
        />
        <div class="relative w-80 xl:w-96">
          <div class="absolute -inset-4 rounded-2xl bg-gradient-to-br from-[var(--color-accent)]/20 via-transparent to-[var(--color-secondary)]/20 blur-2xl"></div>
          <picture>
            <source srcset="/images/hero-current.webp" type="image/webp" />
            <img
              src="/images/hero-current.png"
              alt={theme.hero.imageAlt}
              width="1200"
              height="669"
              loading="eager"
              decoding="async"
              class="relative rounded-2xl shadow-2xl shadow-black/40 w-full h-auto"
            />
          </picture>
        </div>
      </div>
      </div>
    </div>
  </section>

  <!-- ============================================
       CURRENT WORK
       ============================================ -->
  <Section id="current-work" title="What I'm Building" subtitle="The intersection of AI and everything else.">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">

      <div class="animate-on-scroll">
        <Card title="MCP Servers for Finance" href="https://caprus.ai" external>
          <p>Building Model Context Protocol servers that connect LLMs to Oracle EPM systems. Already shipping MCP servers for Oracle Essbase and Oracle EPM Planning. Oracle EPM Financial Close & Consolidations is in beta. Letting Claude, ChatGPT, and Gemini talk directly to enterprise finance data. No hallucinations.</p>
          <div class="mt-4 flex flex-wrap gap-2">
            <span class="px-2 py-1 rounded text-xs font-[var(--font-mono)] dark:bg-white/5 dark:text-[var(--color-accent)] bg-[var(--color-accent)]/10 text-[var(--color-accent)]">MCP</span>
            <span class="px-2 py-1 rounded text-xs font-[var(--font-mono)] dark:bg-white/5 dark:text-[var(--color-accent)] bg-[var(--color-accent)]/10 text-[var(--color-accent)]">Oracle EPM</span>
            <span class="px-2 py-1 rounded text-xs font-[var(--font-mono)] dark:bg-white/5 dark:text-[var(--color-accent)] bg-[var(--color-accent)]/10 text-[var(--color-accent)]">AI</span>
          </div>
        </Card>
      </div>

      <div class="animate-on-scroll">
        <Card title="Caribbean AI Summit" href="https://praicommunity.org/" external>
          <p>Co-chairing what will be the largest AI conference the world's ever seen. October 16-17, 2026 in Puerto Rico. Speakers and attendees from around the globe.</p>
          <p class="mt-2 text-[var(--color-accent)] font-medium text-xs">October 16-17, 2026 &middot; San Juan, PR</p>
        </Card>
      </div>

      <div class="animate-on-scroll">
        <Card title="Caprus AI" href="https://caprus.ai" external>
          <p>Investor and contributor at Caprus, an AI Software & Services firm empowering finance teams with AI solutions for smarter, faster, more strategic financial operations.</p>
          <div class="mt-4 flex flex-wrap gap-2">
            <span class="px-2 py-1 rounded text-xs font-[var(--font-mono)] dark:bg-white/5 dark:text-[var(--color-accent)] bg-[var(--color-accent)]/10 text-[var(--color-accent)]">AI</span>
            <span class="px-2 py-1 rounded text-xs font-[var(--font-mono)] dark:bg-white/5 dark:text-[var(--color-accent)] bg-[var(--color-accent)]/10 text-[var(--color-accent)]">Finance</span>
          </div>
        </Card>
      </div>

      <div class="animate-on-scroll">
        <Card title="Everest Base Camp" href="https://adventureconsultants.com/expeditions/seven-summits/everest" external>
          <p>Training for a trek to Mt. Everest base camp in Nepal. In 2025, I hiked to and through Son Doong Cave in Vietnam, the largest cave in the world. This is me taking it to the next level. (Pun intended.)</p>
        </Card>
      </div>

      <div class="animate-on-scroll">
        <Card title="AI-Powered DM Screen">
          <p>Building a tool that helps Dungeon Masters run better D&D campaigns using AI. Because if you're going to have an artificial intelligence at your table, it should at least help with initiative tracking.</p>
          <div class="mt-4 flex flex-wrap gap-2">
            <span class="px-2 py-1 rounded text-xs font-[var(--font-mono)] dark:bg-white/5 dark:text-[var(--color-accent)] bg-[var(--color-accent)]/10 text-[var(--color-accent)]">D&D</span>
            <span class="px-2 py-1 rounded text-xs font-[var(--font-mono)] dark:bg-white/5 dark:text-[var(--color-accent)] bg-[var(--color-accent)]/10 text-[var(--color-accent)]">AI</span>
          </div>
        </Card>
      </div>

      <div class="animate-on-scroll">
        <Card title="Puerto Rico AI Community" href="https://praicommunity.org/" external>
          <p>President of the Puerto Rico AI Community. Over 850 attendees across our events. We meet every other month to explore what AI means for the island and beyond.</p>
          <p class="mt-2 text-[var(--color-accent)] font-medium text-xs">850+ attendees &middot; Bimonthly</p>
        </Card>
      </div>

    </div>
  </Section>

  <!-- ============================================
       COMPANIES
       ============================================ -->
  <Section id="companies" title="Companies" subtitle="Leading at the intersection of AI and Finance." dark>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">

      <div class="animate-on-scroll">
        <Card title="Dawnward">
          <p>Edward's investment firm. Portfolio across AI, technology, and beyond.</p>
          <p class="mt-3 text-xs dark:text-[var(--color-text-muted)]/50 text-[var(--color-text-dark-muted)]/50 font-[var(--font-mono)]">Role: CEO</p>
        </Card>
      </div>

      <div class="animate-on-scroll">
        <Card title="Caprus" href="https://caprus.ai" external>
          <p>AI Software & Services firm. Helping finance teams leverage artificial intelligence for smarter operations, planning, and analysis.</p>
          <p class="mt-3 text-xs dark:text-[var(--color-text-muted)]/50 text-[var(--color-text-dark-muted)]/50 font-[var(--font-mono)]">Role: Investor & Contributor</p>
        </Card>
      </div>

      <div class="animate-on-scroll">
        <Card title="Argano" href="https://argano.com" external>
          <p>Billion-dollar worldwide consulting firm. Formed in 2020 when Edward merged interRel, the company he founded at age 22 and ran for 25 years.</p>
          <p class="mt-3 text-xs dark:text-[var(--color-text-muted)]/50 text-[var(--color-text-dark-muted)]/50 font-[var(--font-mono)]">Role: Co-founder & Stakeholder</p>
        </Card>
      </div>

    </div>
  </Section>

  <!-- ============================================
       PODCAST
       ============================================ -->
  <Section id="podcast" title="Asking Good Questions" subtitle="A podcast exploring how AI and technology are transforming the CFO's office.">
    <div class="animate-on-scroll">
      <div class="rounded-2xl p-8 md:p-10
        dark:bg-white/[0.02] dark:border dark:border-white/[0.06]
        bg-white border border-black/[0.06] shadow-sm">
        <div class="flex flex-col md:flex-row gap-8 items-start">
          <div class="flex-1">
            <p class="dark:text-[var(--color-text-muted)] text-[var(--color-text-dark-muted)] leading-relaxed mb-6">
              Every episode, Edward sits down with finance leaders, technologists, and executives to explore the past, present, and future of the CFO's office. It's the podcast for people who think spreadsheets should come with a warning label.
            </p>
            <div class="flex flex-wrap gap-3">
              <a href="https://podcasts.apple.com/podcast/id1783616142" target="_blank" rel="noopener" class="inline-flex items-center gap-2 px-4 py-2 rounded-lg text-sm font-medium transition-all duration-200 dark:bg-white/5 dark:text-white dark:hover:bg-white/10 bg-black/5 text-[var(--color-primary)] hover:bg-black/10">
                Apple Podcasts
              </a>
              <a href="https://open.spotify.com/show/2MJqqgiNbQGysS6i0MAihh" target="_blank" rel="noopener" class="inline-flex items-center gap-2 px-4 py-2 rounded-lg text-sm font-medium transition-all duration-200 dark:bg-white/5 dark:text-white dark:hover:bg-white/10 bg-black/5 text-[var(--color-primary)] hover:bg-black/10">
                Spotify
              </a>
              <a href="https://music.amazon.com/podcasts/f5a5f18a-4c16-4f89-8735-079d49f49e49" target="_blank" rel="noopener" class="inline-flex items-center gap-2 px-4 py-2 rounded-lg text-sm font-medium transition-all duration-200 dark:bg-white/5 dark:text-white dark:hover:bg-white/10 bg-black/5 text-[var(--color-primary)] hover:bg-black/10">
                Amazon Music
              </a>
              <a href="/podcast/" class="inline-flex items-center gap-2 px-4 py-2 rounded-lg text-sm font-medium bg-[var(--color-accent)] text-white hover:bg-[var(--color-accent-hover)] transition-all duration-200">
                All Episodes &rarr;
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </Section>

  <!-- ============================================
       QUICK STATS
       ============================================ -->
  <Section dark>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
      {[
        { value: "80+", label: "Countries Visited" },
        { value: "50+", label: "Countries Spoken In" },
        { value: "13", label: "Books Published" },
        { value: "25+", label: "Years as CEO" },
      ].map(stat => (
        <div class="animate-on-scroll">
          <div class="text-4xl md:text-5xl font-black text-[var(--color-accent)] mb-2">{stat.value}</div>
          <div class="text-sm dark:text-[var(--color-text-muted)] text-[var(--color-text-dark-muted)] font-medium">{stat.label}</div>
        </div>
      ))}
    </div>
  </Section>

  <!-- ============================================
       CTA
       ============================================ -->
  <Section>
    <div class="animate-on-scroll text-center max-w-2xl mx-auto">
      <h2 class="text-3xl md:text-4xl font-bold mb-6 dark:text-white text-[var(--color-primary)]">
        Let's Talk
      </h2>
      <p class="dark:text-[var(--color-text-muted)] text-[var(--color-text-dark-muted)] mb-8 text-lg">
        Whether you need a keynote speaker, want to explore AI for your finance team,
        or just have a good question, I've got 13 minutes.
      </p>
      <div class="flex flex-wrap gap-4 justify-center">
        <a href="https://calendar.app.google/udtTerQwcX9Z7QQt7" target="_blank" rel="noopener"
          class="inline-flex items-center gap-2 px-6 py-3 rounded-lg bg-[var(--color-accent)] text-white font-medium hover:bg-[var(--color-accent-hover)] transition-all duration-200 hover:-translate-y-0.5 hover:shadow-lg hover:shadow-[var(--color-accent)]/20"
        >
          Book 13 Minutes
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/></svg>
        </a>
        <a href="/contact/"
          class="inline-flex items-center gap-2 px-6 py-3 rounded-lg font-medium transition-all duration-200 hover:-translate-y-0.5
          dark:bg-white/5 dark:text-white dark:hover:bg-white/10 dark:border dark:border-white/10
          bg-black/5 text-[var(--color-primary)] hover:bg-black/10 border border-black/10"
        >
          Contact Form
        </a>
      </div>
    </div>
  </Section>

</BaseLayout>

<style>
  @keyframes gradientShift {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }

  @keyframes fadeInUp {
    from { opacity: 0; transform: translateY(24px); }
    to { opacity: 1; transform: translateY(0); }
  }

  @keyframes orbitSlow {
    from { transform: rotate(0deg) translateX(200px) rotate(0deg); }
    to { transform: rotate(360deg) translateX(200px) rotate(-360deg); }
  }

  @keyframes orbitMedium {
    from { transform: rotate(120deg) translateX(320px) rotate(-120deg); }
    to { transform: rotate(480deg) translateX(320px) rotate(-480deg); }
  }

  @keyframes orbitFast {
    from { transform: rotate(240deg) translateX(150px) rotate(-240deg); }
    to { transform: rotate(600deg) translateX(150px) rotate(-600deg); }
  }

  .animate-gradient {
    background-size: 400% 400%;
  }
</style>
