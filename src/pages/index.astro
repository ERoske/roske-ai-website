---
import BaseLayout from '../layouts/BaseLayout.astro';
import Section from '../components/Section.astro';
import { currentTheme } from '../themes/theme-config';

const theme = currentTheme;
---

<BaseLayout>

  <!-- ============================================
       HERO SECTION
       ============================================ -->
  <section class="relative min-h-[90vh] flex items-center overflow-hidden">
    <!-- Animated background -->
    <div class="absolute inset-0 dark:block hidden">
      <div class="absolute inset-0 bg-gradient-to-br from-[var(--color-bg)] via-[#1a0a2e] to-[#0a1a2e] animate-gradient" style="background-size: 400% 400%; animation: gradientShift 15s ease infinite;"></div>
      <div class="absolute inset-0" style="background-image: linear-gradient(rgba(233,69,96,0.04) 1px, transparent 1px), linear-gradient(90deg, rgba(233,69,96,0.04) 1px, transparent 1px); background-size: 60px 60px;"></div>
    </div>
    <div class="absolute inset-0 dark:hidden block bg-gradient-to-br from-[var(--color-bg-light)] to-gray-100"></div>

    <!-- Orbiting particles (dark mode only) -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none dark:block hidden">
      <div class="absolute top-1/2 left-1/2">
        <div class="w-1.5 h-1.5 rounded-full bg-[var(--color-accent)] opacity-40 absolute" style="animation: orbitSlow 25s linear infinite;"></div>
        <div class="w-1.5 h-1.5 rounded-full bg-[#4ecdc4] opacity-30 absolute" style="animation: orbitMedium 18s linear infinite;"></div>
        <div class="w-1.5 h-1.5 rounded-full bg-[#ffe66d] opacity-20 absolute" style="animation: orbitFast 12s linear infinite;"></div>
      </div>
    </div>

    <div class="relative z-10 max-w-7xl mx-auto px-6 py-20 md:py-32">
      <div class="flex flex-col lg:flex-row items-center gap-12 lg:gap-16">

      <div class="max-w-4xl lg:max-w-2xl text-center lg:text-left">

        <!-- Headshot (mobile only, centered above text) -->
        <div class="lg:hidden flex justify-center mb-8"
          style="animation: fadeInUp 0.6s ease-out forwards;"
        >
          <img
            src="/images/Edward_Roske_Headshot.png"
            alt="Edward Roske"
            width="160"
            height="160"
            loading="eager"
            class="rounded-full w-28 h-28 sm:w-36 sm:h-36 object-cover shadow-xl ring-4 ring-[var(--color-accent)]/30"
          />
        </div>

        <!-- Status badge -->
        <div class="inline-flex items-center gap-3 rounded-full px-5 py-2 mb-8
          dark:bg-white/[0.03] dark:border dark:border-white/[0.08]
          bg-white border border-black/[0.06] shadow-sm"
          style="animation: fadeInUp 0.6s ease-out forwards;"
        >
          <div class="w-2 h-2 rounded-full bg-[var(--color-accent)] animate-pulse"></div>
          <span class="text-xs font-[var(--font-mono)] tracking-widest uppercase dark:text-[var(--color-text-muted)] text-[var(--color-text-dark-muted)]">
            Week of {theme.week}  &middot;  {theme.name}
          </span>
        </div>

        <!-- Main title -->
        <h1 class="text-5xl sm:text-6xl md:text-7xl lg:text-8xl font-black tracking-tighter leading-[0.9] mb-6"
          style="animation: fadeInUp 0.6s ease-out 0.15s forwards; opacity: 0;"
        >
          <span class="dark:text-white text-[var(--color-primary)]">Edward</span>
          <br/>
          <span class="dark:text-white text-[var(--color-primary)]">Roske</span>
          <span class="text-[var(--color-accent)]">.</span>
        </h1>

        <!-- Subtitle -->
        <p class="text-xl md:text-2xl font-light leading-relaxed max-w-2xl mb-4 mx-auto lg:mx-0
          dark:text-[var(--color-text-muted)] text-[var(--color-text-dark-muted)]"
          style="animation: fadeInUp 0.6s ease-out 0.3s forwards; opacity: 0;"
        >
          {theme.hero.subtitle}
        </p>

        <!-- Tagline -->
        <p class="text-sm font-[var(--font-mono)] tracking-wide mb-8
          dark:text-[var(--color-text-muted)]/60 text-[var(--color-text-dark-muted)]/60"
          style="animation: fadeInUp 0.6s ease-out 0.4s forwards; opacity: 0;"
        >
          {theme.tagline}
        </p>

        <!-- CTA buttons -->
        <div class="flex flex-wrap gap-4 justify-center lg:justify-start mb-10"
          style="animation: fadeInUp 0.6s ease-out 0.5s forwards; opacity: 0;"
        >
          <a href="https://calendar.app.google/udtTerQwcX9Z7QQt7" target="_blank" rel="noopener" class="inline-flex items-center gap-2 px-6 py-3 rounded-lg bg-[var(--color-accent)] text-white font-medium hover:bg-[var(--color-accent-hover)] transition-all duration-200 hover:-translate-y-0.5 hover:shadow-lg hover:shadow-[var(--color-accent)]/20">
            Book 13 Minutes
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/></svg>
          </a>
          <a href="/contact/" class="inline-flex items-center gap-2 px-6 py-3 rounded-lg font-medium transition-all duration-200 hover:-translate-y-0.5
            dark:bg-white/5 dark:text-white dark:hover:bg-white/10 dark:border dark:border-white/10
            bg-black/5 text-[var(--color-primary)] hover:bg-black/10 border border-black/10">
            Get in Touch
          </a>
        </div>

        <!-- Inline stats -->
        <div class="grid grid-cols-4 gap-4 max-w-md mx-auto lg:mx-0"
          style="animation: fadeInUp 0.6s ease-out 0.6s forwards; opacity: 0;"
        >
          {[
            { value: "80+", label: "Countries" },
            { value: "50+", label: "Speaking" },
            { value: "15", label: "Books" },
            { value: "25+", label: "Years CEO" },
          ].map(stat => (
            <div class="text-center lg:text-left">
              <div class="text-lg md:text-xl font-black text-[var(--color-accent)]">{stat.value}</div>
              <div class="text-[10px] md:text-xs dark:text-[var(--color-text-muted)]/60 text-[var(--color-text-dark-muted)]/60 font-[var(--font-mono)] uppercase tracking-wider">{stat.label}</div>
            </div>
          ))}
        </div>

      </div>

      <!-- Hero image (desktop: large and prominent, no redundant headshot) -->
      <div class="hidden lg:block flex-shrink-0 relative"
        style="animation: fadeInUp 0.8s ease-out 0.4s forwards; opacity: 0;"
      >
        <div class="relative w-[28rem] xl:w-[34rem]">
          <!-- Ambient glow behind image -->
          <div class="absolute -inset-8 rounded-3xl bg-gradient-to-br from-[var(--color-accent)]/20 via-[var(--color-accent)]/5 to-[var(--color-secondary)]/20 blur-3xl"></div>
          <!-- Accent border ring -->
          <div class="absolute -inset-[2px] rounded-2xl bg-gradient-to-br from-[var(--color-accent)]/40 via-transparent to-[var(--color-accent)]/20"></div>
          <picture>
            <source srcset="/images/hero-current.webp" type="image/webp" />
            <img
              src="/images/hero-current.png"
              alt={theme.hero.imageAlt}
              width="1200"
              height="669"
              loading="eager"
              decoding="async"
              class="relative rounded-2xl shadow-2xl shadow-[var(--color-accent)]/10 w-full h-auto"
            />
          </picture>
        </div>
      </div>

      <!-- Hero image (mobile/tablet: shown below text) -->
      <div class="lg:hidden relative w-full max-w-lg mx-auto"
        style="animation: fadeInUp 0.8s ease-out 0.5s forwards; opacity: 0;"
      >
        <div class="absolute -inset-4 rounded-2xl bg-gradient-to-br from-[var(--color-accent)]/15 via-transparent to-[var(--color-secondary)]/15 blur-2xl"></div>
        <picture>
          <source srcset="/images/hero-current.webp" type="image/webp" />
          <img
            src="/images/hero-current.png"
            alt={theme.hero.imageAlt}
            width="1200"
            height="669"
            loading="eager"
            decoding="async"
            class="relative rounded-2xl shadow-2xl shadow-black/30 w-full h-auto"
          />
        </picture>
      </div>

      </div>
    </div>
  </section>

  <!-- ============================================
       FEATURED WORK
       ============================================ -->
  <Section id="current-work" title="What I'm Building" subtitle="The intersection of AI and everything else.">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">

      <div class="animate-on-scroll">
        <a href="https://caprus.ai" target="_blank" rel="noopener noreferrer"
          class="block rounded-2xl p-6 h-full transition-all duration-300 group hover:-translate-y-1
            dark:bg-white/[0.03] dark:border dark:border-white/[0.06] dark:hover:border-[var(--color-accent)]/30 dark:hover:bg-white/[0.06]
            bg-white border border-black/[0.06] hover:border-[var(--color-accent)]/30 hover:shadow-xl">
          <div class="flex items-start justify-between mb-3">
            <div class="w-10 h-10 rounded-lg bg-[var(--color-accent)]/10 flex items-center justify-center">
              <svg class="w-5 h-5 text-[var(--color-accent)]" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2"/></svg>
            </div>
            <svg class="w-4 h-4 opacity-40 group-hover:opacity-100 transition-opacity dark:text-white text-[var(--color-primary)]" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/></svg>
          </div>
          <h3 class="text-lg font-bold mb-2 dark:text-white text-[var(--color-primary)] group-hover:text-[var(--color-accent)] transition-colors">
            MCP Servers for Finance
          </h3>
          <p class="dark:text-[var(--color-text-muted)] text-[var(--color-text-dark-muted)] text-sm leading-relaxed mb-3">
            Building Model Context Protocol servers that connect LLMs to Oracle EPM systems. Already shipping for Essbase and Planning. Consolidations in beta.
          </p>
          <div class="flex flex-wrap gap-2">
            <span class="px-2 py-1 rounded text-xs font-[var(--font-mono)] dark:bg-white/5 dark:text-[var(--color-accent)] bg-[var(--color-accent)]/10 text-[var(--color-accent)]">MCP</span>
            <span class="px-2 py-1 rounded text-xs font-[var(--font-mono)] dark:bg-white/5 dark:text-[var(--color-accent)] bg-[var(--color-accent)]/10 text-[var(--color-accent)]">Oracle EPM</span>
            <span class="px-2 py-1 rounded text-xs font-[var(--font-mono)] dark:bg-white/5 dark:text-[var(--color-accent)] bg-[var(--color-accent)]/10 text-[var(--color-accent)]">AI</span>
          </div>
        </a>
      </div>

      <div class="animate-on-scroll">
        <a href="https://praicommunity.org/" target="_blank" rel="noopener noreferrer"
          class="block rounded-2xl p-6 h-full transition-all duration-300 group hover:-translate-y-1
            dark:bg-white/[0.03] dark:border dark:border-white/[0.06] dark:hover:border-[var(--color-accent)]/30 dark:hover:bg-white/[0.06]
            bg-white border border-black/[0.06] hover:border-[var(--color-accent)]/30 hover:shadow-xl">
          <div class="flex items-start justify-between mb-3">
            <div class="w-10 h-10 rounded-lg bg-[var(--color-accent)]/10 flex items-center justify-center">
              <svg class="w-5 h-5 text-[var(--color-accent)]" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z"/></svg>
            </div>
            <svg class="w-4 h-4 opacity-40 group-hover:opacity-100 transition-opacity dark:text-white text-[var(--color-primary)]" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/></svg>
          </div>
          <h3 class="text-lg font-bold mb-2 dark:text-white text-[var(--color-primary)] group-hover:text-[var(--color-accent)] transition-colors">
            Caribbean AI Summit
          </h3>
          <p class="dark:text-[var(--color-text-muted)] text-[var(--color-text-dark-muted)] text-sm leading-relaxed mb-3">
            Co-chairing the largest AI conference Puerto Rico has ever seen. October 16-17, 2026 in San Juan. Speakers and attendees from around the globe.
          </p>
          <p class="text-[var(--color-accent)] font-medium text-xs">October 16-17, 2026 &middot; San Juan, PR</p>
        </a>
      </div>

      <div class="animate-on-scroll">
        <a href="https://caprus.ai" target="_blank" rel="noopener noreferrer"
          class="block rounded-2xl p-6 h-full transition-all duration-300 group hover:-translate-y-1
            dark:bg-white/[0.03] dark:border dark:border-white/[0.06] dark:hover:border-[var(--color-accent)]/30 dark:hover:bg-white/[0.06]
            bg-white border border-black/[0.06] hover:border-[var(--color-accent)]/30 hover:shadow-xl">
          <div class="flex items-start justify-between mb-3">
            <div class="w-10 h-10 rounded-lg bg-[var(--color-accent)]/10 flex items-center justify-center">
              <svg class="w-5 h-5 text-[var(--color-accent)]" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z"/></svg>
            </div>
            <svg class="w-4 h-4 opacity-40 group-hover:opacity-100 transition-opacity dark:text-white text-[var(--color-primary)]" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/></svg>
          </div>
          <h3 class="text-lg font-bold mb-2 dark:text-white text-[var(--color-primary)] group-hover:text-[var(--color-accent)] transition-colors">
            Caprus AI
          </h3>
          <p class="dark:text-[var(--color-text-muted)] text-[var(--color-text-dark-muted)] text-sm leading-relaxed mb-3">
            Investor and contributor at Caprus, an AI Software & Services firm empowering finance teams with AI solutions for smarter, faster, more strategic financial operations.
          </p>
          <div class="flex flex-wrap gap-2">
            <span class="px-2 py-1 rounded text-xs font-[var(--font-mono)] dark:bg-white/5 dark:text-[var(--color-accent)] bg-[var(--color-accent)]/10 text-[var(--color-accent)]">AI</span>
            <span class="px-2 py-1 rounded text-xs font-[var(--font-mono)] dark:bg-white/5 dark:text-[var(--color-accent)] bg-[var(--color-accent)]/10 text-[var(--color-accent)]">Finance</span>
          </div>
        </a>
      </div>

      <div class="animate-on-scroll">
        <div class="block rounded-2xl p-6 h-full transition-all duration-300 group
            dark:bg-white/[0.03] dark:border dark:border-white/[0.06]
            bg-white border border-black/[0.06]">
          <div class="mb-3">
            <div class="w-10 h-10 rounded-lg bg-[var(--color-accent)]/10 flex items-center justify-center">
              <svg class="w-5 h-5 text-[var(--color-accent)]" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
            </div>
          </div>
          <h3 class="text-lg font-bold mb-2 dark:text-white text-[var(--color-primary)]">
            Everest Base Camp
          </h3>
          <p class="dark:text-[var(--color-text-muted)] text-[var(--color-text-dark-muted)] text-sm leading-relaxed">
            Training for a trek to Mt. Everest base camp in Nepal. In 2025, I hiked through Son Doong Cave in Vietnam (the largest cave in the world). This is me taking it to the next level. (Pun intended.)
          </p>
        </div>
      </div>

      <div class="animate-on-scroll">
        <div class="block rounded-2xl p-6 h-full transition-all duration-300 group
            dark:bg-white/[0.03] dark:border dark:border-white/[0.06]
            bg-white border border-black/[0.06]">
          <div class="mb-3">
            <div class="w-10 h-10 rounded-lg bg-[var(--color-accent)]/10 flex items-center justify-center">
              <svg class="w-5 h-5 text-[var(--color-accent)]" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
            </div>
          </div>
          <h3 class="text-lg font-bold mb-2 dark:text-white text-[var(--color-primary)]">
            AI-Powered DM Screen
          </h3>
          <p class="dark:text-[var(--color-text-muted)] text-[var(--color-text-dark-muted)] text-sm leading-relaxed mb-3">
            Building a tool that helps Dungeon Masters run better D&D campaigns using AI. Because if you're going to have an artificial intelligence at your table, it should at least help with initiative tracking.
          </p>
          <div class="flex flex-wrap gap-2">
            <span class="px-2 py-1 rounded text-xs font-[var(--font-mono)] dark:bg-white/5 dark:text-[var(--color-accent)] bg-[var(--color-accent)]/10 text-[var(--color-accent)]">D&D</span>
            <span class="px-2 py-1 rounded text-xs font-[var(--font-mono)] dark:bg-white/5 dark:text-[var(--color-accent)] bg-[var(--color-accent)]/10 text-[var(--color-accent)]">AI</span>
          </div>
        </div>
      </div>

      <div class="animate-on-scroll">
        <a href="https://praicommunity.org/" target="_blank" rel="noopener noreferrer"
          class="block rounded-2xl p-6 h-full transition-all duration-300 group hover:-translate-y-1
            dark:bg-white/[0.03] dark:border dark:border-white/[0.06] dark:hover:border-[var(--color-accent)]/30 dark:hover:bg-white/[0.06]
            bg-white border border-black/[0.06] hover:border-[var(--color-accent)]/30 hover:shadow-xl">
          <div class="flex items-start justify-between mb-3">
            <div class="w-10 h-10 rounded-lg bg-[var(--color-accent)]/10 flex items-center justify-center">
              <svg class="w-5 h-5 text-[var(--color-accent)]" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/></svg>
            </div>
            <svg class="w-4 h-4 opacity-40 group-hover:opacity-100 transition-opacity dark:text-white text-[var(--color-primary)]" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/></svg>
          </div>
          <h3 class="text-lg font-bold mb-2 dark:text-white text-[var(--color-primary)] group-hover:text-[var(--color-accent)] transition-colors">
            Puerto Rico AI Community
          </h3>
          <p class="dark:text-[var(--color-text-muted)] text-[var(--color-text-dark-muted)] text-sm leading-relaxed">
            President of the Puerto Rico AI Community. Over 850 attendees across our events. We meet every other month to explore what AI means for the island and beyond.
          </p>
          <p class="mt-3 text-[var(--color-accent)] font-medium text-xs">850+ attendees &middot; Bimonthly</p>
        </a>
      </div>

    </div>
    <div class="mt-8 text-center">
      <a href="/work/" class="text-sm font-medium text-[var(--color-accent)] hover:underline">
        See all work and speaking history &rarr;
      </a>
    </div>
  </Section>

  <!-- ============================================
       CTA
       ============================================ -->
  <Section dark>
    <div class="animate-on-scroll text-center max-w-2xl mx-auto">
      <h2 class="text-3xl md:text-4xl font-bold mb-6 dark:text-white text-[var(--color-primary)]">
        Let's Talk
      </h2>
      <p class="dark:text-[var(--color-text-muted)] text-[var(--color-text-dark-muted)] mb-8 text-lg">
        Whether you need a keynote speaker, want to explore AI for your finance team,
        or just have a good question, I've got 13 minutes.
      </p>
      <div class="flex flex-wrap gap-4 justify-center">
        <a href="https://calendar.app.google/udtTerQwcX9Z7QQt7" target="_blank" rel="noopener"
          class="inline-flex items-center gap-2 px-6 py-3 rounded-lg bg-[var(--color-accent)] text-white font-medium hover:bg-[var(--color-accent-hover)] transition-all duration-200 hover:-translate-y-0.5 hover:shadow-lg hover:shadow-[var(--color-accent)]/20"
        >
          Book 13 Minutes
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/></svg>
        </a>
        <a href="/contact/"
          class="inline-flex items-center gap-2 px-6 py-3 rounded-lg font-medium transition-all duration-200 hover:-translate-y-0.5
          dark:bg-white/5 dark:text-white dark:hover:bg-white/10 dark:border dark:border-white/10
          bg-black/5 text-[var(--color-primary)] hover:bg-black/10 border border-black/10"
        >
          Contact Form
        </a>
      </div>
    </div>
  </Section>

</BaseLayout>

<style>
  @keyframes gradientShift {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }

  @keyframes fadeInUp {
    from { opacity: 0; transform: translateY(24px); }
    to { opacity: 1; transform: translateY(0); }
  }

  @keyframes orbitSlow {
    from { transform: rotate(0deg) translateX(200px) rotate(0deg); }
    to { transform: rotate(360deg) translateX(200px) rotate(-360deg); }
  }

  @keyframes orbitMedium {
    from { transform: rotate(120deg) translateX(320px) rotate(-120deg); }
    to { transform: rotate(480deg) translateX(320px) rotate(-480deg); }
  }

  @keyframes orbitFast {
