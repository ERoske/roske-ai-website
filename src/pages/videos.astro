---
import BaseLayout from '../layouts/BaseLayout.astro';
import Section from '../components/Section.astro';
import { readFileSync, existsSync } from 'fs';

interface YouTubeVideo {
  title: string;
  videoId: string;
  published: string;
  description: string;
  thumbnail: string;
  category: string;
}

interface ExternalVideo {
  title: string;
  url: string;
  published: string;
  source: string;
  description: string;
  category: string;
}

let youtubeVideos: YouTubeVideo[] = [];
const ytPath = 'src/data/youtube-videos.json';
if (existsSync(ytPath)) {
  try {
    youtubeVideos = JSON.parse(readFileSync(ytPath, 'utf-8'));
  } catch {}
}

let externalVideos: ExternalVideo[] = [];
const extPath = 'src/data/external-videos.json';
if (existsSync(extPath)) {
  try {
    externalVideos = JSON.parse(readFileSync(extPath, 'utf-8'));
  } catch {}
}

function formatDate(dateStr: string): string {
  try {
    return new Date(dateStr).toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' });
  } catch { return dateStr; }
}
---

<BaseLayout title="Videos | Edward Roske" description="AI news briefs, conference talks, interviews, and demos. Edward Roske on video.">

  <!-- Hero -->
  <section class="relative py-20 md:py-28 px-6 overflow-hidden">
    <div class="absolute inset-0 dark:block hidden bg-gradient-to-b from-[var(--color-bg)] to-[var(--color-surface)]"></div>
    <div class="absolute inset-0 dark:hidden block bg-gradient-to-b from-[var(--color-bg-light)] to-gray-50"></div>
    <div class="relative max-w-7xl mx-auto">
      <div class="max-w-3xl">
        <p class="text-sm font-[var(--font-mono)] tracking-widest uppercase mb-4 text-[var(--color-accent)]"
          style="animation: fadeInUp 0.6s ease-out forwards;">
          Videos
        </p>
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-black tracking-tight leading-tight mb-6 dark:text-white text-[var(--color-primary)]"
          style="animation: fadeInUp 0.6s ease-out 0.1s forwards; opacity: 0;">
          On Camera
        </h1>
        <p class="text-lg md:text-xl leading-relaxed dark:text-[var(--color-text-muted)] text-[var(--color-text-dark-muted)]"
          style="animation: fadeInUp 0.6s ease-out 0.2s forwards; opacity: 0;">
          Monthly AI news briefs, conference talks, product demos, and interviews. Everything from MCP server demos to predictions about where AI is heading next.
        </p>
      </div>
    </div>
  </section>

  <!-- YouTube Channel Videos -->
  <Section title="AI News Briefs & Demos" subtitle="From my YouTube channel. Monthly AI news for people who'd rather not read 50 articles.">
    {youtubeVideos.length > 0 ? (
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {youtubeVideos.map((video) => (
          <a href={`https://www.youtube.com/watch?v=${video.videoId}`} target="_blank" rel="noopener noreferrer"
            class="animate-on-scroll block rounded-xl overflow-hidden transition-all duration-300 group hover:-translate-y-1
              dark:bg-white/[0.03] dark:border dark:border-white/[0.06] dark:hover:border-[var(--color-accent)]/30 dark:hover:bg-white/[0.06]
              bg-white border border-black/[0.06] hover:border-[var(--color-accent)]/30 hover:shadow-lg">
            <div class="relative aspect-video bg-black/10">
              <img
                src={video.thumbnail}
                alt={video.title}
                loading="lazy"
                class="w-full h-full object-cover"
              />
              <div class="absolute inset-0 flex items-center justify-center bg-black/20 group-hover:bg-black/40 transition-colors">
                <div class="w-14 h-14 rounded-full bg-[var(--color-accent)] flex items-center justify-center shadow-lg group-hover:scale-110 transition-transform">
                  <svg class="w-6 h-6 text-white ml-1" fill="currentColor" viewBox="0 0 24 24"><path d="M8 5v14l11-7z"/></svg>
                </div>
              </div>
            </div>
            <div class="p-5">
              <h3 class="font-bold dark:text-white text-[var(--color-primary)] group-hover:text-[var(--color-accent)] transition-colors leading-snug mb-2">
                {video.title}
              </h3>
              <p class="dark:text-[var(--color-text-muted)] text-[var(--color-text-dark-muted)] text-sm leading-relaxed line-clamp-2 mb-3">
                {video.description}
              </p>
              <span class="text-xs font-[var(--font-mono)] dark:text-[var(--color-text-muted)]/60 text-[var(--color-text-dark-muted)]/60">
                {formatDate(video.published)}
              </span>
            </div>
          </a>
        ))}
      </div>
    ) : (
      <div class="text-center py-8">
        <p class="dark:text-[var(--color-text-muted)] text-[var(--color-text-dark-muted)]">
          Videos will be populated from the YouTube feed during the next site rebuild.
        </p>
      </div>
    )}
    <div class="text-center mt-8">
      <a href="https://www.youtube.com/@Roske-AI" target="_blank" rel="noopener noreferrer"
        class="inline-flex items-center gap-2 px-5 py-2.5 rounded-lg bg-[var(--color-accent)] text-white text-sm font-medium hover:bg-[var(--color-accent-hover)] transition-all duration-200 hover:-translate-y-0.5">
        Subscribe on YouTube
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/></svg>
      </a>
    </div>
  </Section>

  <!-- Interviews & Conference Talks -->
  {externalVideos.length > 0 && (
    <Section title="Interviews & Conference Talks" subtitle="Appearances across conferences, podcasts, and webinars." dark>
      <div class="max-w-3xl space-y-4">
        {externalVideos.map((video) => (
          <a href={video.url} target="_blank" rel="noopener noreferrer"
            class="animate-on-scroll block rounded-xl p-5 transition-all duration-300 group hover:-translate-y-0.5
              dark:bg-white/[0.03] dark:border dark:border-white/[0.06] dark:hover:border-[var(--color-accent)]/30 dark:hover:bg-white/[0.06]
              bg-white border border-black/[0.06] hover:border-[var(--color-accent)]/30 hover:shadow-lg">
            <div class="flex items-start justify-between gap-4">
              <div class="flex-1 min-w-0">
                <h3 class="font-bold dark:text-white text-[var(--color-primary)] group-hover:text-[var(--color-accent)] transition-colors leading-snug">
                  {video.title}
                </h3>
                <p class="dark:text-[var(--color-text-muted)] text-[var(--color-text-dark-muted)] text-sm leading-relaxed mt-2">
                  {video.description}
                </p>
                <div class="flex items-center gap-3 mt-3">
                  <span class="text-xs font-[var(--font-mono)] dark:text-[var(--color-text-muted)]/60 text-[var(--color-text-dark-muted)]/60">
                    {formatDate(video.published)}
                  </span>
                  <span class="px-2 py-0.5 rounded text-xs font-[var(--font-mono)] dark:bg-white/5 dark:text-[var(--color-accent)] bg-[var(--color-accent)]/10 text-[var(--color-accent)]">
                    {video.source}
                  </span>
                </div>
              </div>
              <svg class="w-5 h-5 flex-shrink-0 mt-1 opacity-40 group-hover:opacity-100 transition-opacity dark:text-white text-[var(--color-primary)]" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/></svg>
            </div>
          </a>
        ))}
      </div>
    </Section>
  )}

  <!-- CTA -->
  <Section>
    <div class="animate-on-scroll text-center max-w-2xl mx-auto">
      <h2 class="text-3xl md:text-4xl font-bold mb-4 dark:text-white text-[var(--color-primary)]">
        Want Edward on Your Show?
      </h2>
      <p class="dark:text-[var(--color-text-muted)] text-[var(--color-text-dark-muted)] mb-8 text-lg">
        Available for podcasts, webinars, conference keynotes, and panels. Topics include AI, MCP servers, finance technology, data science, and entrepreneurship.
      </p>
      <div class="flex flex-wrap gap-4 justify-center">
        <a href="/contact/"
          class="inline-flex items-center gap-2 px-6 py-3 rounded-lg bg-[var(--color-accent)] text-white font-medium hover:bg-[var(--color-accent-hover)] transition-all duration-200 hover:-translate-y-0.5 hover:shadow-lg hover:shadow-[var(--color-accent)]/20">
          Speaking Inquiry
        </a>
        <a href="https://www.youtube.com/@Roske-AI" target="_blank" rel="noopener noreferrer"
          class="inline-flex items-center gap-2 px-6 py-3 rounded-lg font-medium transition-all duration-200 hover:-translate-y-0.5
            dark:bg-white/5 dark:text-white dark:hover:bg-white/10 dark:border dark:border-white/10
            bg-black/5 text-[var(--color-primary)] hover:bg-black/10 border border-black/10">
          YouTube Channel
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/></svg>
        </a>
      </div>
    </div>
  </Section>

</BaseLayout>

<style>
  @keyframes fadeInUp {
    from { opacity: 0; transform: translateY(24px); }
    to { opacity: 1; transform: translateY(0); }
  }
</style>
