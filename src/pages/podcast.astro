---
import BaseLayout from '../layouts/BaseLayout.astro';
import Section from '../components/Section.astro';
import Card from '../components/Card.astro';
import { readFileSync, existsSync } from 'fs';

interface Episode {
  title: string;
  description: string;
  pubDate: string;
  link: string;
  duration: string;
  episodeNumber?: number;
}

let episodes: Episode[] = [];
const dataPath = 'src/data/podcast-episodes.json';
if (existsSync(dataPath)) {
  try {
    episodes = JSON.parse(readFileSync(dataPath, 'utf-8'));
  } catch {}
}

function formatDuration(seconds: string): string {
  const s = parseInt(seconds);
  if (isNaN(s)) return '';
  const m = Math.floor(s / 60);
  return `${m} min`;
}

function formatDate(dateStr: string): string {
  try {
    return new Date(dateStr).toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' });
  } catch { return dateStr; }
}
---

<BaseLayout title="Podcast — Asking Good Questions" description="Asking Good Questions: a podcast exploring how AI and technology are transforming the CFO's office. Hosted by Edward Roske.">

  <!-- Hero -->
  <section class="relative py-20 md:py-28 px-6 overflow-hidden">
    <div class="absolute inset-0 dark:block hidden bg-gradient-to-b from-[var(--color-bg)] to-[var(--color-surface)]"></div>
    <div class="absolute inset-0 dark:hidden block bg-gradient-to-b from-[var(--color-bg-light)] to-gray-50"></div>
    <div class="relative max-w-7xl mx-auto">
      <div class="max-w-3xl">
        <p class="text-sm font-[var(--font-mono)] tracking-widest uppercase mb-4 text-[var(--color-accent)]"
          style="animation: fadeInUp 0.6s ease-out forwards;">
          Podcast
        </p>
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-black tracking-tight leading-tight mb-6 dark:text-white text-[var(--color-primary)]"
          style="animation: fadeInUp 0.6s ease-out 0.1s forwards; opacity: 0;">
          Asking Good Questions
        </h1>
        <p class="text-lg md:text-xl leading-relaxed dark:text-[var(--color-text-muted)] text-[var(--color-text-dark-muted)]"
          style="animation: fadeInUp 0.6s ease-out 0.2s forwards; opacity: 0;">
          Every episode, I sit down with finance leaders, technologists, and executives to explore the past, present, and future of the CFO's office. It's the podcast for people who think spreadsheets should come with a warning label.
        </p>
      </div>
    </div>
  </section>

  <!-- Listen On -->
  <Section title="Listen Anywhere" subtitle="Pick your platform. We don't judge.">
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
      {[
        { name: "Apple Podcasts", url: "https://podcasts.apple.com/podcast/id1783616142", icon: "apple" },
        { name: "Spotify", url: "https://open.spotify.com/show/2MJqqgiNbQGysS6i0MAihh", icon: "spotify" },
        { name: "Amazon Music", url: "https://music.amazon.com/podcasts/f5a5f18a-4c16-4f89-8735-079d49f49e49", icon: "amazon" },
        { name: "Buzzsprout", url: "https://askinggoodquestions.buzzsprout.com/", icon: "rss" },
      ].map(platform => (
        <a href={platform.url} target="_blank" rel="noopener noreferrer"
          class="animate-on-scroll flex items-center gap-4 rounded-xl p-5 transition-all duration-300 group hover:-translate-y-1
            dark:bg-white/[0.03] dark:border dark:border-white/[0.06] dark:hover:border-[var(--color-accent)]/30 dark:hover:bg-white/[0.06]
            bg-white border border-black/[0.06] hover:border-[var(--color-accent)]/30 hover:shadow-lg">
          <div class="w-12 h-12 rounded-lg flex items-center justify-center bg-[var(--color-accent)]/10 text-[var(--color-accent)] group-hover:bg-[var(--color-accent)]/20 transition-colors">
            {platform.icon === "apple" && (
              <svg class="w-6 h-6" viewBox="0 0 24 24" fill="currentColor"><path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.8-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/></svg>
            )}
            {platform.icon === "spotify" && (
              <svg class="w-6 h-6" viewBox="0 0 24 24" fill="currentColor"><path d="M12 0C5.4 0 0 5.4 0 12s5.4 12 12 12 12-5.4 12-12S18.66 0 12 0zm5.521 17.34c-.24.359-.66.48-1.021.24-2.82-1.74-6.36-2.101-10.561-1.141-.418.122-.779-.179-.899-.539-.12-.421.18-.78.54-.9 4.56-1.021 8.52-.6 11.64 1.32.42.18.479.659.301 1.02zm1.44-3.3c-.301.42-.841.6-1.262.3-3.239-1.98-8.159-2.58-11.939-1.38-.479.12-1.02-.12-1.14-.6-.12-.48.12-1.021.6-1.141C9.6 9.9 15 10.561 18.72 12.84c.361.181.54.78.241 1.2zm.12-3.36C15.24 8.4 8.82 8.16 5.16 9.301c-.6.179-1.2-.181-1.38-.721-.18-.601.18-1.2.72-1.381 4.26-1.26 11.28-1.02 15.721 1.621.539.3.719 1.02.419 1.56-.299.421-1.02.599-1.559.3z"/></svg>
            )}
            {platform.icon === "amazon" && (
              <svg class="w-6 h-6" viewBox="0 0 24 24" fill="currentColor"><path d="M.045 18.02c.072-.116.187-.124.348-.064 2.729 1.353 5.706 2.008 8.876 2.008 2.17 0 4.406-.41 6.672-1.18.168-.056.3-.024.396.096.096.12.072.252-.072.396-1.692 1.296-4.11 2.028-6.996 2.028-3.366 0-6.378-1.044-8.988-3.096-.12-.096-.156-.2-.108-.312.024-.048.048-.048.072-.048l-.2.172zM22.92 16.32c.2.24.156.516-.132.756-.96.792-2.004 1.2-3.132 1.2-.648 0-1.212-.144-1.692-.432-.168-.108-.18-.252-.036-.432.12-.144.264-.168.432-.072.576.264 1.128.396 1.656.396.804 0 1.536-.3 2.196-.888.168-.156.348-.192.54-.108.072.024.12.072.168.144v-.564zM14.004 13.896c-.24 0-.48-.036-.672-.108-.384-.132-.576-.36-.576-.684 0-.384.228-.684.684-.888.384-.168.876-.252 1.476-.252.624 0 1.14.048 1.548.144v.288c0 .456-.168.852-.504 1.188-.336.336-.804.504-1.404.504l-.552-.192zm3.228-3.18c-.648-.6-1.536-.9-2.664-.9-1.128 0-2.304.3-3.528.9-.168.084-.3.06-.396-.072-.096-.132-.06-.264.108-.396 1.296-.744 2.58-1.116 3.852-1.116 1.32 0 2.352.384 3.096 1.152.264.288.264.456 0 .504-.12.024-.252-.012-.396-.108l-.072.036zM12 0C5.373 0 0 5.373 0 12s5.373 12 12 12 12-5.373 12-12S18.627 0 12 0z"/></svg>
            )}
            {platform.icon === "rss" && (
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M6 5c7.18 0 13 5.82 13 13M6 11a7 7 0 017 7m-6 0a1 1 0 11-2 0 1 1 0 012 0z"/></svg>
            )}
          </div>
          <div>
            <div class="font-semibold dark:text-white text-[var(--color-primary)] group-hover:text-[var(--color-accent)] transition-colors">{platform.name}</div>
            <div class="text-xs dark:text-[var(--color-text-muted)] text-[var(--color-text-dark-muted)]">Listen now</div>
          </div>
          <svg class="w-4 h-4 ml-auto opacity-40 group-hover:opacity-100 transition-opacity dark:text-white text-[var(--color-primary)]" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/></svg>
        </a>
      ))}
    </div>
  </Section>

  <!-- About the Show -->
  <Section title="About the Show" subtitle="What we talk about when we talk about finance." dark>
    <div class="animate-on-scroll max-w-3xl">
      <div class="space-y-6 dark:text-[var(--color-text-muted)] text-[var(--color-text-dark-muted)] text-lg leading-relaxed">
        <p>
          <strong class="dark:text-white text-[var(--color-primary)]">Asking Good Questions</strong> started because I noticed that the best finance leaders I've worked with across 25+ years all had one thing in common: they asked better questions than everyone else in the room.
        </p>
        <p>
          Every episode explores how <strong class="dark:text-white text-[var(--color-primary)]">AI, data science, and technology</strong> are reshaping the Office of the CFO. We talk to people building the future of enterprise finance — not to sell you software, but to figure out what's actually working and what's still hype.
        </p>
        <p>
          Topics include EPM, financial consolidation, planning, budgeting, analytics, MCP servers, AI agents, and whatever else is keeping CFOs up at night. No jargon walls. No vendor pitches. Just good questions.
        </p>
      </div>
    </div>
  </Section>

  <!-- Recent Episodes -->
  <Section title="Recent Episodes" subtitle="Latest from the feed.">
    {episodes.length > 0 ? (
      <div class="space-y-4 max-w-3xl">
        {episodes.slice(0, 8).map((ep) => (
          <a href={ep.link || 'https://askinggoodquestions.buzzsprout.com/'} target="_blank" rel="noopener noreferrer"
            class="animate-on-scroll block rounded-xl p-5 transition-all duration-300 group hover:-translate-y-0.5
              dark:bg-white/[0.03] dark:border dark:border-white/[0.06] dark:hover:border-[var(--color-accent)]/30 dark:hover:bg-white/[0.06]
              bg-white border border-black/[0.06] hover:border-[var(--color-accent)]/30 hover:shadow-lg">
            <div class="flex items-start justify-between gap-4">
              <div class="flex-1 min-w-0">
                <h3 class="font-bold dark:text-white text-[var(--color-primary)] group-hover:text-[var(--color-accent)] transition-colors leading-snug">
                  {ep.title}
                </h3>
                <p class="dark:text-[var(--color-text-muted)] text-[var(--color-text-dark-muted)] text-sm leading-relaxed mt-2 line-clamp-2">
                  {ep.description}
                </p>
                <div class="flex items-center gap-3 mt-3">
                  <span class="text-xs font-[var(--font-mono)] dark:text-[var(--color-text-muted)]/60 text-[var(--color-text-dark-muted)]/60">
                    {formatDate(ep.pubDate)}
                  </span>
                  {ep.duration && (
                    <span class="text-xs font-[var(--font-mono)] dark:text-[var(--color-text-muted)]/60 text-[var(--color-text-dark-muted)]/60">
                      {formatDuration(ep.duration)}
                    </span>
                  )}
                </div>
              </div>
              <div class="flex-shrink-0 w-10 h-10 rounded-lg flex items-center justify-center bg-[var(--color-accent)]/10 text-[var(--color-accent)] group-hover:bg-[var(--color-accent)] group-hover:text-white transition-colors mt-1">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M8 5v14l11-7z"/></svg>
              </div>
            </div>
          </a>
        ))}
        <div class="text-center pt-4">
          <a href="https://askinggoodquestions.buzzsprout.com/" target="_blank" rel="noopener noreferrer"
            class="text-sm font-medium text-[var(--color-accent)] hover:underline">
            View all episodes &rarr;
          </a>
        </div>
      </div>
    ) : (
      <div class="animate-on-scroll text-center max-w-md mx-auto py-8">
        <p class="dark:text-[var(--color-text-muted)] text-[var(--color-text-dark-muted)] text-sm mb-4">
          Episodes will be populated from the RSS feed during the next site rebuild.
        </p>
        <a href="https://askinggoodquestions.buzzsprout.com/" target="_blank" rel="noopener noreferrer"
          class="inline-flex items-center gap-2 px-5 py-2.5 rounded-lg bg-[var(--color-accent)] text-white text-sm font-medium hover:bg-[var(--color-accent-hover)] transition-all duration-200 hover:-translate-y-0.5">
          Browse All Episodes
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/></svg>
        </a>
      </div>
    )}
  </Section>

  <!-- CTA -->
  <Section dark>
    <div class="animate-on-scroll text-center max-w-2xl mx-auto">
      <h2 class="text-3xl md:text-4xl font-bold mb-4 dark:text-white text-[var(--color-primary)]">
        Have a Good Question?
      </h2>
      <p class="dark:text-[var(--color-text-muted)] text-[var(--color-text-dark-muted)] mb-8 text-lg">
        Want to be a guest? Have a topic you'd like covered? I'm always looking for people who ask better questions than I do. (It's a short list.)
      </p>
      <div class="flex flex-wrap gap-4 justify-center">
        <a href="/contact/"
          class="inline-flex items-center gap-2 px-6 py-3 rounded-lg bg-[var(--color-accent)] text-white font-medium hover:bg-[var(--color-accent-hover)] transition-all duration-200 hover:-translate-y-0.5 hover:shadow-lg hover:shadow-[var(--color-accent)]/20">
          Get in Touch
        </a>
        <a href="https://rss.buzzsprout.com/2430929.rss" target="_blank" rel="noopener noreferrer"
          class="inline-flex items-center gap-2 px-6 py-3 rounded-lg font-medium transition-all duration-200 hover:-translate-y-0.5
            dark:bg-white/5 dark:text-white dark:hover:bg-white/10 dark:border dark:border-white/10
            bg-black/5 text-[var(--color-primary)] hover:bg-black/10 border border-black/10">
          RSS Feed
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M6 5c7.18 0 13 5.82 13 13M6 11a7 7 0 017 7m-6 0a1 1 0 11-2 0 1 1 0 012 0z"/></svg>
        </a>
      </div>
    </div>
  </Section>

</BaseLayout>

<style>
  @keyframes fadeInUp {
    from { opacity: 0; transform: translateY(24px); }
    to { opacity: 1; transform: translateY(0); }
  }
</style>
