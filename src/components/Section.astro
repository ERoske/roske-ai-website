---
interface Props {
  id?: string;
  title?: string;
  subtitle?: string;
  class?: string;
  dark?: boolean;
}

const { id, title, subtitle, class: className = '', dark = false } = Astro.props;
---

<section
  id={id}
  class:list={[
    "py-20 md:py-28 px-6",
    dark ? "dark:bg-[var(--color-surface)] bg-gray-50" : "",
    className,
  ]}
>
  <div class="max-w-7xl mx-auto">
    {(title || subtitle) && (
      <div class="animate-on-scroll mb-12 md:mb-16">
        {title && (
          <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold tracking-tight dark:text-white text-[var(--color-primary)]">
            {title}
          </h2>
        )}
        {subtitle && (
          <p class="mt-4 text-lg dark:text-[var(--color-text-muted)] text-[var(--color-text-dark-muted)] max-w-2xl">
            {subtitle}
          </p>
        )}
      </div>
    )}
    <slot />
  </div>
</section>
